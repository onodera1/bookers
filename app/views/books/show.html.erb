   <html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="v
t" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>



<body>
<div class="container"></div>
  <div class="row">
<div class="col-lg-3">
  <%= render 'users/list',user: @book.user, book:@new_book %>
 </div>

 <div class="col-lg-9">
  <h2>Book detail</h2>

<table class="table table-hover">
   <tbody>
     	<tr>
          <td>  <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                <%= @book.user.name %>
          <%end%>
            
          </td>
                    <td><%= @book.title %></td>
                    <td><%= @book.body %></td>


                    <% if @book.user == current_user %>
                   <td><%= link_to "Edit", edit_book_path(@book) %></td>
        <td><%= link_to "Destory", book_path(@book), method: :delete,  "data-confirm" => '本当に消しますか?' %></td>
        <%end%>
        </tr>
    </tbody>
  </table>
</div>
</div>
</body>
</html> 

