

<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/list',user: @user, book:@new_book %>
    </div>

    <div class="col-lg-9">
            <h2>Users</h2>
             <thead>
            <tr>
            <th>image</th>
            <th>name</th>
              </tr>
          </thead>
       <% @users.each do |user| %>
      

      <table class="table table-hover">
         
          <tbody>
        <tr>
            <td><%= link_to users_path(user) do %>
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
              <%end%>
            <td><h3 class="profile-name"><%= user.name %></h3></td>
             <td><%= link_to "Show",user_path(user) %></td>
           </tr>
          </tbody>
        </table>
       <% end %>
       </div>
    </div>
  </div>
</div>







